<resources>

    <!-- Base application theme. -->
    <style name="baseStyle" parent="Theme.Design.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="baseStyle.Light" parent="Theme.Design.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.Light" parent="baseStyle.Light">
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
        <item name="actionBarTheme">@style/actionbar</item>
    </style>
    <style name="actionbar" parent="baseStyle.Light">
        <item name="android:textColorPrimary">?attr/colorAccent</item>
        <item name="android:colorControlNormal">?attr/colorAccent</item>
        <item name="android:elevation">4dp</item>
        <item name="actionBarPopupTheme">@style/actionBarPopupTheme</item>
    </style>
    <style name="actionBarPopupTheme" parent="Theme.Design.Light">
            <item name="android:colorForeground">?attr/colorAccent</item>
    </style>
    <style name="titleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:titleTextColor">?attr/colorAccent</item>
    </style>
</resources>
