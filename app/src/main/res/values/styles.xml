<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense</item>
<!--        <item name="hintTextAppearance">@style/TextAppearance.AppCompat.Small</item>-->
        <item name="colorPrimaryDark">?attr/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="colorControlNormal">?attr/colorPrimary</item>
        <item name="toolbarStyle">@style/toolBar</item>
<!--        <item name="actionBarStyle">@style/toolBar</item>-->
<!--        <item name="actionBarTheme">@style/toolBar</item>-->
        <item name="appBarLayoutStyle">@style/appBar</item>
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="preferenceStyle">@style/preference</item>
        <item name="chipStyle">@style/chip</item>
        <item name="actionButtonStyle">@style/actionButtonStyle</item>
    </style>

    <style name="actionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:tint">?attr/colorOnSurface</item>
    </style>

    <style name="chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:gravity">center|clip_horizontal</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="preference" parent="Preference.Material">
<!--        <item name="android:iconTint">?attr/colorOnSurface</item>-->
    </style>
    
<!--    <style name=""-->

    <style name="toolBar" parent="Widget.MaterialComponents.Toolbar.Primary" >
        <item name="android:colorControlNormal">?attr/colorOnPrimary</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:background">?attr/colorOnPrimary</item>
        <item name="titleTextColor">?attr/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="elevation">4dp</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <style name="appBar" parent="Widget.MaterialComponents.AppBarLayout.Primary" >
        <item name="android:background">?attr/colorOnPrimary</item>
<!--        <item name="android:colorBackground">?attr/colorOnPrimary</item>-->
    </style>
    <style name="baseStyle.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="buttonStyle">@style/buttonStyle</item>-->
    </style>
    <style name="AppTheme.Light" parent="baseStyle.Light">
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
<!--        <item name="colorPrimary">@color/colorPrimary</item>-->
<!--        <item name="colorOnPrimary">@color/colorAccent</item>-->
        <item name="actionBarTheme">@style/actionbar</item>
        <item name="toolbarStyle">@style/toolbar</item>
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
        <item name="appBarLayoutStyle">@style/Widget.MaterialComponents.AppBarLayout.Primary</item>
        <item name="tabStyle">@style/Widget.MaterialComponents.TabLayout</item>
    </style>
    <style name="toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary" >
        <item name="android:elevation">0dp</item>
    </style>
    <style name="actionbar" parent="baseStyle.Light">
        <item name="android:contentInsetStart">0dp</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorPrimary">?attr/colorAccent</item>
        <item name="colorControlNormal">?attr/colorAccent</item>
        <item name="android:colorControlNormal">?attr/colorAccent</item>
        <item name="colorOnBackground">@color/colorAccent</item>
        <item name="android:elevation">4dp</item>
    </style>
    <style name="bottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_item_fix</item>
        <item name="itemTextColor">@color/bottom_nav_item_fix</item>
    </style>
    <style name="bottomDialog" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="shape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>

    <style name="user_share_action_style">
        <item name="android:padding">16dp</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:contentDescription">TODO</item>
    </style>

    <style name="textProvinceStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
