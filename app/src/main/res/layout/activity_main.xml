<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_home"
    tools:context=".activities.MainActivity"
    tools:openDrawer="right"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:fitsSystemWindows="true"
        android:background="#94FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fabStartReleaseMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/colorPrimary"
            app:icon="@drawable/ic_add_black_24dp"
            app:iconTint="@color/colorAccent"
            app:rippleColor="@color/colorAccent"
            app:layout_anchor="@id/listProjectMain"
            app:layout_behavior="com.bigcreate.zyfw.callback.ScrollHideBehavior"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="24dp"
            app:layout_anchorGravity="end|bottom"
            app:elevation="0dp"
            android:focusable="true" />
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:clipToPadding="false"
            android:paddingTop="0dp"
            android:id="@+id/swipeLayoutMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:clipToPadding="false"
            android:paddingTop="16dp"
            android:paddingBottom="36dp"
            android:id="@+id/listProjectMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_project_search"
            />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            layout="@layout/layout_loading"/>
        <com.google.android.material.appbar.AppBarLayout
            app:layout_behavior="com.bigcreate.zyfw.callback.ScrollHideBehavior"
            app:expanded="true"
            app:elevation="0dp"
            android:background="#00FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/layout_search_bar"/>
        </com.google.android.material.appbar.AppBarLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/navigationMain"
        app:headerLayout="@layout/layout_navigation_header"
        app:menu="@menu/navigation_drawer"
        app:insetForeground="@color/zeroColor"
        />

</androidx.drawerlayout.widget.DrawerLayout>