<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingTop="@dimen/list_item_spacing_half"
    android:paddingBottom="@dimen/list_item_spacing_half"
    tools:context=".fragments.ProvinceProjectDialogFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">
        <ImageView
            android:id="@+id/imageProvinceProject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            style="@style/TextAppearance.MaterialComponents.Headline2"
            android:text="回天有我，社会服务——汉字英雄书写大赛（初赛）"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textSize="20sp"
            android:textColor="?attr/colorOnSurface"
            android:id="@+id/titleProvinceProject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/placeProvinceProject"
            android:text="平谷区文乐胡同6号"
            style="@style/textProvinceStyle"/>
        <TextView
            android:id="@+id/serviceTypeProvinceProject"
            android:text="绿色环保"
            style="@style/textProvinceStyle"/>
        <TextView
            android:id="@+id/serviceObjectProvinceProject"
            android:text="其他"
            style="@style/textProvinceStyle"/>
        <TextView
            android:id="@+id/recruitDateProvinceProject"
            android:text="2019-08-24 至 2019-08-25"
            style="@style/textProvinceStyle"/>
        <TextView
            android:id="@+id/projectDateProvinceProject"
            android:text="2019-08-23 至 2019-08-25"
            style="@style/textProvinceStyle"/>
        <TextView
            android:id="@+id/releaseDateProvinceProject"
            android:text="2019-08-24"
            style="@style/textProvinceStyle"/>
        <TextView
            android:id="@+id/serviceTimeProvinceProject"
            android:text="建西社区开展“垃圾分类我先行”宣传志愿服务活动，活动时间：2019年8月25日上午8:00—10:00，活动地点：中卫世纪城3-9建西社区居委会"
            style="@style/textProvinceStyle"/>
        <TextView
            android:id="@+id/guaranteeProvinceProject"
            android:text="志愿者服装"
            style="@style/textProvinceStyle"/>
        <TextView
            android:id="@+id/contactsProvinceProject"
            android:text="刘畅"
            style="@style/textProvinceStyle"/>
        <TextView
            android:id="@+id/contactInforProvinceProject"
            android:text="手机：18500359585 电话：89983812 邮箱：jianxishequ@163.com"
            style="@style/textProvinceStyle"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>